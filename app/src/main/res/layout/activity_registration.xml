<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Registration"
            android:id="@+id/textview_registration"
            android:layout_gravity="center_horizontal|top"
            android:layout_weight="0.06"
            android:textColor="#FF3F9FE0"
            android:textStyle="bold"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#fff500"
            android:layout_marginBottom="15dp"
            />


        <TextView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Name : "
            android:id="@+id/textview_name"
            android:layout_weight="0.02" />

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex:Dwayne Johnson"
            android:id="@+id/edittext_name"
            />

        <TextView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Id : "
            android:textSize="15sp"
            android:id="@+id/textview_email"
            android:layout_weight="0.06" />

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: dwyane@johnson.com"
            android:id="@+id/edittext_email"
            android:maxLines="1"
            android:singleLine="true" />

        <TextView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enrollment Number : "
            android:textSize="15sp"
            android:id="@+id/textview_enroll"
            android:layout_weight="0.06" />

        <EditText
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 0201XY121056"
            android:id="@+id/edittext_enroll"
            android:singleLine="true" />

        <FrameLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Year : "
                android:textSize="15sp"
                android:id="@+id/textview_year"
                android:layout_gravity="left|center_vertical" />

            <Spinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_year"
                android:layout_gravity="right|center_vertical"
                android:spinnerMode="dropdown" />

        </FrameLayout>

        <FrameLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.27">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch : "
                android:textSize="15sp"
                android:id="@+id/textview_branch"
                android:layout_gravity="left|center_vertical" />

            <Spinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_branch"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>


        <Button
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn"
            android:shadowColor="#fff500"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:onClick="forward"
            />

        <TextView
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/text_note"
            android:text="Note : Please fill correct details as it will be used to provide targeted notices and news items to you."
            />

    </LinearLayout>

</ScrollView>