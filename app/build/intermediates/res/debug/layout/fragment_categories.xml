                android:layout_height="60dp"
                android:id="@+id/textViewAcademics"
                android:background="@drawable/card_dash_1"
                android:text="Academics"
                android:height="60dp"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:textColor="#ffffff"
